<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--////////////////////////////////////////////////////////////////////////////////////////////////-->
    <!--layoutk-->
    <!--////////////////////////////////////////////////////////////////////////////////////////////////-->
    <!--layoutk_loading-->
    <declare-styleable name="LayoutKLoading">
        <attr name="layoutKLoading_loadColor" format="color|reference" />
        <attr name="layoutKLoading_loadSize" format="dimension|reference" />
    </declare-styleable>

    <!--layoutk_navbar-->
    <attr name="LayoutKNavBar_StyleK_LayoutKNavBar" format="reference" />
    <declare-styleable name="LayoutKNavBar">
        <attr name="layoutKNavBar_title" format="string|reference" />
        <attr name="layoutKNavBar_title_textColor" format="color|reference" />
        <attr name="layoutKNavBar_title_textSize" format="dimension|reference" />

        <attr name="layoutKNavBar_subTitle" format="string|reference" />
        <attr name="layoutKNavBar_subTitle_textSize" format="dimension|reference" />
        <attr name="layoutKNavBar_subTitle_textColor" format="color|reference" />
        <attr name="layoutKNavBar_subTitle_marginTop" format="dimension|reference" />

        <attr name="layoutKNavBar_lineColor" format="color|reference" />
        <attr name="layoutKNavBar_lineWidth" format="dimension|reference" />
    </declare-styleable>



    <declare-styleable name="LayoutKAmount">
        <attr name="layoutKAmount_minVal" format="integer" />
        <attr name="layoutKAmount_maxVal" format="integer" />
        <attr name="layoutKAmount_defaultAmount" format="integer" />

        <attr name="layoutKAmount_amountTextColor" format="color|reference" />
        <attr name="layoutKAmount_amountTextSize" format="dimension|reference" />
        <attr name="layoutKAmount_amountBackgroundColor" format="color|reference" />
        <attr name="layoutKAmount_amountMarginHorizontal" format="dimension|reference" />
        <attr name="layoutKAmount_amountMinWidth" format="dimension|reference" />

        <attr name="layoutKAmount_btnTextColor" format="color|reference" />
        <attr name="layoutKAmount_btnTextSize" format="dimension|reference" />
        <attr name="layoutKAmount_btnBackgroundColor" format="color|reference" />
        <attr name="layoutKAmount_btnSize" format="dimension|reference" />
    </declare-styleable>

    <!--视频布局-->
    <declare-styleable name="LayoutKVideo">
        <!--视频地址-->
        <attr name="layoutKVideo_pathOrUrl" format="string|reference" />
        <!--视频是否循环播放-->
        <attr name="layoutKVideo_isLoop" format="boolean" />
        <!--视频位置权重-->
        <attr name="layoutKVideo_videoGravity" format="enum">
            <enum name="start" value="0" />
            <enum name="end" value="1" />
            <enum name="centerCrop" value="2" />
            <enum name="none" value="3" />
        </attr>
        <!--音量0-10-->
        <attr name="layoutKVideo_volume" format="integer" />
    </declare-styleable>

    <declare-styleable name="LayoutKEditItem">
        <attr name="layoutKEditItem_hint" format="string|reference" />
        <attr name="layoutKEditItem_title" format="string|reference" />
        <attr name="layoutKEditItem_inputType" format="enum">
            <enum name="text" value="0" />
            <enum name="password" value="1" />
            <enum name="number" value="2" />
        </attr>
        <attr name="layoutKEditItem_titleAppearance" format="reference" />
        <attr name="layoutKEditItem_inputAppearance" format="reference" />
        <attr name="layoutKEditItem_topLineAppearance" format="reference" />
        <attr name="layoutKEditItem_bottomLineAppearance" format="reference" />
    </declare-styleable>

    <declare-styleable name="LayoutKEditItem_TitleAppearance">
        <attr name="titleAppearance_titleColor" format="reference|color" />
        <attr name="titleAppearance_titleSize" format="dimension|reference" />
        <attr name="titleAppearance_leftPadding" format="dimension|reference" />
        <attr name="titleAppearance_minWidth" format="dimension" />
    </declare-styleable>

    <declare-styleable name="LayoutKEditItem_EditAppearance">
        <attr name="inputAppearance_hintColor" format="reference|color" />
        <attr name="inputAppearance_inputColor" format="color|reference" />
        <attr name="inputAppearance_textSize" format="dimension|reference" />
        <attr name="inputAppearance_maxEditLength" format="integer" />
    </declare-styleable>

    <declare-styleable name="LayoutKEditItem_LineAppearance">
        <attr name="lineAppearance_color" format="reference|color" />
        <attr name="lineAppearance_height" format="dimension|reference" />
        <attr name="lineAppearance_leftMargin" format="dimension|reference" />
        <attr name="lineAppearance_rightMargin" format="dimension|reference" />
    </declare-styleable>

    <declare-styleable name="LayoutKSquare">
        <attr name="layoutKSquare_measureMode" format="enum">
            <enum name="measureMin" value="0" />
            <enum name="measureMax" value="1" />
            <enum name="measureWidth" value="2" />
            <enum name="measureHeight" value="3" />
        </attr>
    </declare-styleable>
</resources>